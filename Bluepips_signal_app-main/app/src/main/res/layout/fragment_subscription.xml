<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.slideshow.SubscriptionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:fontFamily="@font/amarante"
            android:id="@+id/subscription_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subscription Plans"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Plan Details -->
        <TextView
            android:id="@+id/plan_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subscribe to our premium plan for exclusive features."
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Plan Options -->
        <RadioGroup
            android:id="@+id/plan_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/plan_basic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:text="Ruby (Monthly) - $100.00" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ruby benefits"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="1. 4 trade signals daily"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Community support and updates"/>

            <RadioButton
                android:id="@+id/plan_intermidiate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:text="Sapphire (Monthly) - $200.00" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sapphire benefits"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. 10 trade signals daily"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Community support and updates"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Access to bluepips trading journal" />

            <RadioButton
                android:id="@+id/plan_premium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:text="Emerald(Monthly) - $500.00" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emerald benefits"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Unlimited trade signals daily"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Personal account Manager" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Direct trade automation" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. Personalised account boosting pips" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5. Community support and updates" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6. Access to bluepips trading journal" />
        </RadioGroup>

        <!-- Subscribe Button -->
        <Button
            android:onClick="body"
            android:fontFamily="@font/amarante"
            android:id="@+id/subscribe_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subscribe Now"
            android:backgroundTint="@color/design_default_color_primary"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <!-- Cancel Subscription Button -->
        <Button
            android:fontFamily="@font/amarante"
            android:id="@+id/cancel_subscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel Subscription"
            android:backgroundTint="@color/design_default_color_secondary"
            android:textColor="@android:color/white" />

        <Button
            android:fontFamily="@font/amarante"
            android:id="@+id/subscribe_button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subscribe to our bot"
            android:backgroundTint="@color/design_default_color_primary"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />
    </LinearLayout>

</ScrollView>